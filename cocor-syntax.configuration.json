{
  "comments": {
    // symbol used for single line comment
    "lineComment": "//",
    // symbols used for start and end a block comment
    "blockComment": [
      "/*",
      "*/"
    ]
  },
  // symbols used as brackets
  "brackets": [
    [
      "{",
      "}"
    ],
    [
      "[",
      "]"
    ],
    [
      "(",
      ")"
    ]
  ],
  // symbols that are auto closed when typing
  "autoClosingPairs": [
    [
      "{",
      "}"
    ],
    [
      "[",
      "]"
    ],
    [
      "(",
      ")"
    ],
    [
      "\"",
      "\""
    ],
    [
      "'",
      "'"
    ],
    {
      "open": "(.",
      "close": ".)",
      "notIn": [
        "string",
        "comment"
      ]
    },
    {
      "open": "=",
      "close": ".",
      "notIn": [
        "string",
        "comment"
      ]
    }
  ],
  // symbols that that can be used to surround a selection
  "surroundingPairs": [
    [
      "{",
      "}"
    ],
    [
      "[",
      "]"
    ],
    [
      "(",
      ")"
    ],
    [
      "\"",
      "\""
    ],
    [
      "'",
      "'"
    ],
    [
      "(.",
      ".)"
    ],
    [
      "=",
      "."
    ]
  ],
  // support for folding regions by using `//#region` and `//#endregion`
  "folding": {
    "offside": true,
    "markers": {
      "start": "^\\s*\\/\\/\\s*#region\\b",
      "end": "^\\s*\\/\\/\\s*#endregion\\b"
    }
  }
}
